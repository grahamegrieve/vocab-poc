  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="The dangers associated with normal biological materials. I.e. potential risk of unknown infections.  Routine biological materials from living subjects."/>
    </extension>
    <code value="BIO"/>
    <display value="Biological"/>
    <definition value="Biological"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is corrosive and may cause severe injury to skin, mucous membranes and eyes. Avoid any unprotected contact."/>
    </extension>
    <code value="COR"/>
    <display value="Corrosive"/>
    <definition value="Corrosive"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="The entity is at risk for escaping from containment or control."/>
    </extension>
    <code value="ESC"/>
    <display value="Escape Risk"/>
    <definition value="Escape Risk"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="A danger that can be associated with certain living subjects, including humans."/>
    </extension>
    <code value="AGG"/>
    <display value="Aggressive"/>
    <definition value="Aggressive"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is highly inflammable and in certain mixtures (with air) may lead to explosions.  Keep away from fire, sparks and excessive heat."/>
    </extension>
    <code value="IFL"/>
    <display value="MaterialDangerInflammable"/>
    <definition value="MaterialDangerInflammable"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is an explosive mixture.  Keep away from fire, sparks, and heat."/>
    </extension>
    <code value="EXP"/>
    <display value="Explosive"/>
    <definition value="Explosive"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material known to be infectious with human pathogenic microorganisms.  Those who handle this material must take precautions for their protection."/>
    </extension>
    <code value="INF"/>
    <display value="MaterialDangerInfectious"/>
    <definition value="MaterialDangerInfectious"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material contains microorganisms that are an environmental hazard.  Must be handled with special care."/>
    </extension>
    <code value="BHZ"/>
    <display value="Biohazard"/>
    <definition value="Biohazard"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is solid and sharp (e.g., cannulas.)  Dispose in hard container."/>
    </extension>
    <code value="INJ"/>
    <display value="Injury Hazard"/>
    <definition value="Injury Hazard"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is poisonous to humans and/or animals.  Special care must be taken to avoid incorporation, even of small amounts."/>
    </extension>
    <code value="POI"/>
    <display value="Poison"/>
    <definition value="Poison"/>
  </concept>
  <concept>
    <extension url="http://hl7.org/fhir/StructureDefinition/codesystem-comments">
      <valueString value="Material is a source for ionizing radiation and must be handled with special care to avoid injury of those who handle it and to avoid environmental hazards."/>
    </extension>
    <code value="RAD"/>
    <display value="Radioactive"/>
    <definition value="Radioactive"/>
  </concept>
